{
  "name": "x402-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "concurrently --kill-others-on-fail -n lint,typecheck,build -c magenta,cyan,white \"bun lint\" \"bun typecheck\" \"next build\"",
    "build:github": "rm -rf out && cross-env NEXT_PUBLIC_BUILD_FOR=github bun run build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --cache --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@heroui/react": "2.8.1",
    "@radix-ui/react-slot": "1.2.3",
    "@tanstack/react-query": "5.83.0",
    "ahooks": "3.9.0",
    "clsx": "2.1.1",
    "lodash-es": "4.17.21",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "shiki": "3.8.0",
    "tailwind-merge": "3.3.1",
    "zod": "4.0.5",
    "zustand": "5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@iconify/json": "2.2.359",
    "@iconify/tailwind4": "1.0.6",
    "@tailwindcss/postcss": "4.1.11",
    "@types/lodash-es": "4.17.12",
    "@types/node": "24.0.14",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "concurrently": "9.2.0",
    "cross-env": "7.0.3",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.1",
    "tailwindcss": "4.1.11",
    "type-fest": "4.41.0",
    "typescript": "5.8.3"
  },
  "trustedDependencies": [
    "@heroui/shared-utils",
    "@tailwindcss/oxide",
    "unrs-resolver"
  ]
}
